<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/dialog_addlocation">

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addLocation_mapview">

    </com.google.android.gms.maps.MapView>

    <CheckBox
        android:id="@+id/dialog_addlocation_useCurrentLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="gebruik deze locatie"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_addlocation_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="adres"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:id="@+id/dialog_addlocation_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="tag/label/categorie"
            />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>