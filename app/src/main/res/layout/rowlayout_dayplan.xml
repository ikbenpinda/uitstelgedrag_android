<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="4dp"
                  android:gravity="top|bottom">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_reorder_grey_800_18dp"
            android:id="@+id/rowlayout_dayplan_grip_icon"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taak 1234"
            android:id="@+id/rowlayout_dayplan_task_title"
            android:padding="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_toEndOf="@+id/rowlayout_dayplan_grip_icon"/>
    </RelativeLayout>

</LinearLayout>