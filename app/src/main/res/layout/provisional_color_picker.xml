<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/provisional_label_color_picker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/provisional_label_color_picker_card_00"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:padding="16dp"
        app:cardBackgroundColor="?attr/colorPrimary">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/provisional_label_color_picker_card_0A"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/base16_eighties_red">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/provisional_label_color_picker_card_0B"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/base16_eighties_light_red">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/provisional_label_color_picker_card_0C"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/base16_eighties_blue">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/provisional_label_color_picker_card_0D"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/base16_eighties_light_blue">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/provisional_label_color_picker_card_0E"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/base16_eighties_green">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/provisional_label_color_picker_card_0F"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/base16_eighties_yellow">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/provisional_label_color_picker_card_0G"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/base16_eighties_purple">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/provisional_label_color_picker_card_0H"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/base16_eighties_brown">
    </android.support.v7.widget.CardView>

</LinearLayout>