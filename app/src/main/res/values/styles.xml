<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />


    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorPrimary">#607D8B</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="AppTheme.Solarized" parent="AppTheme.Light">
        <item name="colorPrimary">#586e75</item>
        <item name="colorPrimaryDark">#073642</item>
        <item name="colorAccent">#268bd2</item>
        <item name="android:colorBackground">@color/apptheme_colorbackground</item>
    </style>

</resources>
